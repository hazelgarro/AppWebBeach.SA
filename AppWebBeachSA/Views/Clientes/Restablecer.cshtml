@model AppWebBeachSA.Models.SeguridadRestablecer;


@{
    ViewData["Title"] = "Restablecer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Restablecer Contraseña</h1>

<div class="row">
    <div class="col-md-4">

        @if (TempData["MensajeError"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Mensaje</strong> @TempData["MensajeError"].
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="Restablecer" asp-controller="Clientes">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Contraseña actual</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NuevoPassword" class="control-label">Nueva contraseña</label>
                <input asp-for="NuevoPassword" class="form-control" />
                <span asp-validation-for="NuevoPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Confirmar" class="control-label">Confirmar contraseña</label>
                <input asp-for="Confirmar" class="form-control" />
                <span asp-validation-for="Confirmar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
