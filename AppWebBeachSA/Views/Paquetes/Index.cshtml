@model IEnumerable<AppWebBeachSA.Models.Paquete>

@{
    ViewData["Title"] = "Paquetes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head class="fondo">
    <link rel="stylesheet" href="~/css/forms.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppWebBeachSA.styles.css" asp-append-version="true" />
</head>
<body class="bg-paquete">
    <section class="bg-color">
        <h1>Paquetes disponibles</h1>

        <p class =" pt-3">
            <a class="btn boton" asp-action="Create">Registrar paquete</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        Paquete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-text">
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td class="align-text">
                            @Html.DisplayFor(modelItem => item.NombrePaquete)
                        </td>
                        <td class="btn-group">
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn boton" })
                            @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn boton" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn boton" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</body>