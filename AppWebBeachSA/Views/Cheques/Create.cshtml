@model AppWebBeachSA.Models.Cheque

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center">
    <div>
        <h1 class="text-center text-uppercase">Agregar</h1>

        <h4 class="text-center">Cheques</h4>
    </div>
</div>

<hr />
<div class="d-flex justify-content-center">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroCheque" class="control-label fw-semibold fs-5 mb-1"></label>
                <input asp-for="NumeroCheque" class="form-control" />
                <span asp-validation-for="NumeroCheque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreBanco" class="control-label fw-semibold fs-5 mb-1"></label>
                <input asp-for="NombreBanco" class="form-control" />
                <span asp-validation-for="NombreBanco" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center mt-4">
                <input type="submit" value="Crear" class="btn btn-outline-success form-size fs-5 fw-semibold" />
            </div>
        </form>
    </div>
</div>

